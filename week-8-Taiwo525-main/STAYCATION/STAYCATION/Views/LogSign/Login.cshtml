@model STAYCATION.Models.Customers

@{
    ViewBag.Title = "Login Page";
}


<!-- Font Icon -->
<link rel="stylesheet" href="fonts/material-icon/css/material-design-iconic-font.min.css">

<!-- Main css -->
<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />

<body>

    <div class="overlay">
        <form asp-action="Login" method="post">
            <div class="con">
                <header class="head-form">
                    <h2>Log In</h2>
                    <p>login here using your username and password</p>
                </header>
                <br>
                <div class="field-set">
                    <div class="">
                        <span class="input-item">
                            <i class="fa fa-user-circle"></i>
                        </span>
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Email", required = "required" })
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>


                    <!--   Password -->
                    <div class="">
                        <span class="input-item">
                            <i class="fa fa-key"></i>
                        </span>
                        @Html.TextBoxFor(model => model.PassWord, new { @class = "form-control", placeholder = "Password", required = "required" })
                        <span>
                            <i class="fa fa-eye" aria-hidden="true" type="button" id="eye"></i>
                        </span>
                        <span asp-validation-for="PassWord" class="text-danger"></span>
                    </div>
                    <div class="form-group form-button">
                        <input type="submit" name="login" id="login" class="form-submit" value="LogIn" />
                    </div>
                    @*<button class="log-in" type="submit" style="background-color: #0000ff"> Log In </button>*@
                </div>

                <!--   other buttons -->
                <div class="other">
                    <!--      Forgot Password button-->
                    <button class="btn submits frgt-pass">Forgot Password</button>
                    <!--     Sign Up button -->
                    <button class="btn submits sign-up">
                        Sign Up
                        <i class="fa fa-user-plus" aria-hidden="true"></i>
                    </button>

                </div>


            </div>


        </form>
    </div>

    @section Scripts{
        @{
            <partial name="_ValidationScriptsPartial" />
        }
    }



    <!-- JS -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="js/main.js"></script>
</body>


